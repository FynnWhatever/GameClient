<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"  
    android:id="@+id/Gamepad"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    >


    <flo.gameserver.client.GamePadView
        android:id="@+id/gamepadview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/linearlayout_id" />

        <LinearLayout
            android:id="@+id/linearlayout_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:layout_marginRight="0dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true">

                <Button
                    android:text="B"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:id="@+id/actionButtonB"
                    android:visibility="visible"
                    android:onClick="onActionButtonBClick" />

                <Button
                    android:text="A"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:id="@+id/actionButtonA"
                    android:visibility="visible"
                    android:onClick="onActionButtonAClick" />

        </LinearLayout>

</RelativeLayout>