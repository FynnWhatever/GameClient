<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity1" >

    <Button
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:onClick="send_up_command"
        android:text="@string/button_up" />

    <Button
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:onClick="send_left_command"
        android:text="@string/button_left" />

    <Button
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:onClick="send_right_command"
        android:text="@string/button_right" />

    <Button
        android:layout_width="164dp"
        android:layout_height="100dp"
        android:onClick="send_down_command"
        android:text="@string/button_down" />

</LinearLayout>